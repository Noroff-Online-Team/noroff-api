{
  "name": "noroff-api",
  "version": "1.0.0",
  "private": true,
  "author": "Noroff School of Technology and Digital Media <https://noroff.no>",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "pnpm turbo dev --parallel",
    "build:v1": "pnpm turbo build --filter=v1...",
    "build:v2": "pnpm turbo build --filter=v2...",
    "build:docs": "pnpm turbo build --filter=docs...",
    "build:api-utils": "pnpm turbo build --filter=@noroff/api-utils...",
    "build:logger": "pnpm turbo build --filter=@noroff/logger...",
    "build": "pnpm turbo build",
    "start:v1": "pnpm --cwd apps/v1 start",
    "start:v2": "pnpm --cwd apps/v2 start",
    "start:docs": "pnpm --cwd apps/docs start",
    "start": "concurrently \"pnpm start:v1\" \"pnpm start:v2\" \"pnpm start:docs\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.14"
  },
  "resolutions": {
    "@opentelemetry/api": "1.4.1",
    "@opentelemetry/core": "1.13.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "0.39.1",
    "@opentelemetry/resources": "1.13.0",
    "@opentelemetry/sdk-trace-base": "1.13.0",
    "@opentelemetry/sdk-trace-node": "1.13.0",
    "@opentelemetry/semantic-conventions": "1.13.0"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write .",
    "*.ts": "eslint --cache --fix"
  },
  "packageManager": "pnpm@9.1.0"
}
