{
  "name": "noroff-api",
  "description": "Noroff API server",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "tsnd --respawn --transpile-only --exit-child -r tsconfig-paths/register src/app.ts",
    "start": "node dist/src/app.js",
    "build": "rimraf dist && tsc -p tsconfig.json && npm run copy-images",
    "prebuild": "yarn generate:v1 && yarn generate:v2",
    "copy-images": "copyfiles -u 1 \"src/public/**/*\" dist/src",
    "prepare": "husky install",
    "test": "tap",
    "test:coverage": "tap --coverage",
    "generate:v1": "prisma generate --schema prisma/v1/schema.prisma",
    "generate:v2": "prisma generate --schema prisma/v2/schema.prisma"
  },
  "dependencies": {
    "@fastify/autoload": "^5.7.1",
    "@fastify/cors": "^8.1.0",
    "@fastify/jwt": "^6.3.2",
    "@fastify/rate-limit": "^7.4.0",
    "@fastify/static": "^6.5.0",
    "@fastify/swagger": "^7.5.1",
    "@prisma/client": "^5.0.0",
    "axios": "^0.27.2",
    "fastify": "^4.8.1",
    "fastify-plugin": "^4.5.0",
    "fastify-type-provider-zod": "^1.1.7",
    "http-errors": "^2.0.0",
    "node-schedule": "^2.1.0",
    "prisma-extension-pagination": "^0.5.0-next.1",
    "statuses": "^2.0.1",
    "tap": "^16.3.7",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.18.1"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.2",
    "@types/node": "^18.11.9",
    "@types/node-schedule": "^2.1.0",
    "@types/statuses": "^2.0.0",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "prisma": "^5.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "tap": {
    "coverage": false,
    "reporter": "spec",
    "node-arg": [
      "--require=tsconfig-paths/register",
      "--require=ts-node/register"
    ]
  }
}
