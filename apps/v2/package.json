{
  "name": "v2",
  "description": "Noroff API server",
  "version": "2.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/app.ts",
    "start": "node dist/app.js",
    "start:migrate:prod": "pnpm prisma migrate deploy && pnpm start",
    "build": "tsup",
    "prebuild": "pnpm prisma generate",
    "db:seed": "prisma db seed",
    "docker:up": "docker-compose -f ./docker-compose.tests.yml up -d",
    "docker:down": "docker-compose -f ./docker-compose.tests.yml down",
    "test:dev": "./src/test-utils/scripts/run-integration.sh",
    "test": "jest --runInBand",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format .",
    "format:write": "biome format --write ."
  },
  "dependencies": {
    "@fastify/autoload": "^5.7.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/jwt": "^7.2.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.11.0",
    "@fastify/swagger-ui": "^1.10.0",
    "@noroff/api-utils": "workspace:*",
    "@noroff/logger": "workspace:*",
    "@prisma/client": "^5.4.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "fastify": "^4.23.2",
    "fastify-metrics": "^10.3.2",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "http-errors": "^2.0.0",
    "jest-mock-extended": "^3.0.5",
    "node-schedule": "^2.1.1",
    "prisma-extension-pagination": "^0.7.4",
    "qs": "^6.11.2",
    "statuses": "^2.0.1",
    "ts-node": "^10.9.1",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@types/http-errors": "^2.0.2",
    "@types/jest": "^29.5.5",
    "@types/node-schedule": "^2.1.1",
    "@types/qs": "^6.9.8",
    "@types/statuses": "^2.0.2",
    "jest": "^29.7.0",
    "prisma": "^5.4.1",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
